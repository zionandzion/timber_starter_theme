<div class="container">
	<div class="row">
		<div class="col-md-9">
			<article id="content">

				{% block page_title %}
					<h1>{{ post.title }}</h1>
				{% endblock %}

				{% block content %}
					{{ post.content }}
				{% endblock %}

			</article>
		</div>
		<div class="col-md-3">
			<aside id="sidebar-right">

				{% block sidebar %}
				{% endblock %}

			</aside>
		</div>
	</div>
</div>