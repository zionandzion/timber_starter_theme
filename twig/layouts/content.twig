<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div id="site-content">

				{% block content %}
					<article>
						{% for post in posts %}

							{% block title %}
								<header>
									<h1>{{ post.post_title }}</h1>
									<time datetime="{{ post.post_date_gmt }}" pubdate>{{ post.post_date }}</time>
								</header>
							{% endblock %}

							{% block body %}
								{{ posts.content }}
							{% endblock %}

							{% block footer %}
								<footer>
								</footer>
							{% endblock %}

						{% endfor %}
					</article>
				{% endblock %}

			</div>
		</div>
	</div>
</div>